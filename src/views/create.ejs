    <title>Cargar productos</title>
    <link rel="stylesheet" href="/css/cargaproducto.css">
    <%-include('./partials/header') %>

    <h1>Cargar productos para catálogo</h1>
  

    <section class="container main">
        <div class="row ">
          <form action="/products/cargar-producto" method="POST" enctype="multipart/form-data">
            <div class="form-row descripcion">
              <div class="form-group ">
                  <label ><strong>Subir fotos de producto</strong></label><br>
                  <label >Muestralos con fondos blancos y bien iluminados</label>
                    
            </div>
            <div class="fila-archivos">
                <div class="form-group">
                <label class="subir-archivo">
                    <input type="file" name="archivos" multiple/>
                    +
                </label>
              </div>
             
             </div>
            <div class="form-group ">
                    <label for=""><strong>Describe tu producto</strong></label><br>
                    <label for="titulo">Título</label><br>
                    <input type="text" class="form-control" name="titulo">
                    <br>
            </div>
            <label for="descripcion">Descripción:</label>
            <div class="input-group ">
                <div class="input-group-prepend">
                </div>
                
                <textarea class="form-control" aria-label="With textarea" name="description" >
                </textarea>
              </div>
            <br>

            <div class="form-check">
                <label for="edad">Edad:</label> <br>
                <input class="form-check-input" type="radio" name="age"  value="0-6 Meses" checked>
                <label class="form-check-label" for="exampleRadios1">
                  0 - 6 Meses
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios"  value="6 - 12 Meses">
                <label class="form-check-label" for="exampleRadios2">
                 6 - 12 Meses
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" value="1 - 3 Años" >
                <label class="form-check-label" for="exampleRadios3">
                 1 a 3 años
                </label>
              </div>
              <div class="form-check">
                  <input class="form-check-input" type="radio" name="exampleRadios"  value="3 a 6 Años" >
                  <label class="form-check-label" for="exampleRadios3">
                   3 a 6 años
                  </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios"  value="6 - 9 Años" >
                    <label class="form-check-label" for="exampleRadios3">
                     6 a 9 años
                    </label>
                  </div>

                  <div class="form-check">
                      <input class="form-check-input" type="radio" name="exampleRadios" value="+ 9 Años" >
                      <label class="form-check-label" for="exampleRadios3">
                       Más de 9 años
                      </label>
                    </div>
                    <br>
            <div class="form-group">
                    <label for="genero">Género</label>
                    <select id="genero" class="form-control" name="gender">
                      <option selected>Seleccione</option>
                      <option>Niña</option>
                      <option>Niño</option>
                   
                    </select>
             </div>
                  
            </div>
                
            <button type="submit" class="btn btn-primary">Cargar</button>
          
          </form>

        </div> <!--Row-->
    </section>
       <!-- Optional JavaScript -->
